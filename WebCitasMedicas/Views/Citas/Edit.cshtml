@using Modelo.Entidades;
@model Cita
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edición de Citas</h1>
<p>Formulario para la edición de Citas del Sistema de Citas de tabajao Constructora Laymicer</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Ud. esta actualizando la Cita: @Model.Num_Orden</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="CitaId" />
               
                <div class="form-group">
                    <label class="control-label">Fecha de Cita</label>
                    <input class="form-control" asp-for="Fecha_Cita" />
                    <label class="control-label"> Fecha de Registro</label>
                    <input class="form-control" asp-for="Fecha_Registro" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <label class="control-label"> Num. Orden</label>
                    <input class="form-control" asp-for="Num_Orden" />
                    <label class="control-label"> Cliente</label>
                    <select class="form-control"
                            asp-for="PacienteId"
                            asp-items="@ViewBag.selectListaPacientes">
                        <option value="">--Seleccionar un Cliente--</option>
                    </select>
                    <label class="control-label"> Empleado</label>
                    <select class="form-control"
                            asp-for="MedicoId"
                            asp-items="@ViewBag.selectListaMedicos">
                        <option value="">--Seleccionar un Empleado--</option>
                    </select>
                </div>               
                <div class="form-group">                        
                    <input type="submit" class="btn btn-primary" value="Actualizar Médico" />

                </div>
            </form>
        </div>
    </div>
</div>